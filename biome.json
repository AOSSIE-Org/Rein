{
	"$schema": "https://biomejs.dev/schemas/2.2.4/schema.json",

	"files": {
		"ignoreUnknown": true,
		"ignore": [".vscode", "src/routeTree.gen.ts", "src/styles.css"]
	},

	"formatter": {
		"enabled": true,
		"indentStyle": "tab"
	},

	"organizeImports": {
		"enabled": true
	},

	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		}
	}
}
